{
    "swagger": "2.0",
    "info": {
        "title":"Web API todo node js - express",
        "description": "WEB API TODO",
        "version": "1.0"
    },
    "schemes": ["http"],
    "produces": ["application/json"],
    "paths":{
        "/todos":{
            "get":{
                "operationId": "index",
                "tags": ["todos"],
                "summary": "Find all todos",
                "description": "Hàm lấy tất cả các todo",
                "parameters": [ ],
                "responses": {
                    "200":{
                        "description": "successful operation",
                        "schema":{
                            "type":"array",
                            "items": {
                                "$ref": "#/definitions/todo"
                            }
                        }
                    }
                }
            },
            "post":{
                "tags":["todos"],
                "summary": "Add new todo",
                "description":"Hàm tạo mới todo",
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "description": "Pet object that needs to be added to the store",
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/todo"
                    }
                }],
                "responses": {
                    "405": {
                    "description": "Invalid input"
                    },
                    "200": {
                        "description": "add todo succesfull",
                        "schema":{
                            "type":"object",
                            "items": {
                                "$ref": "#/definitions/todo"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions":{
        "todo":{
            "type": "object",
            "required":["text"],
            "properties":{
                "text":{
                    "type":"string"
                },
                "completed":{
                    "type":"boolean",
                    "default":"false"
                },
                "completedAt":{
                    "type": "integer",
                    "format":"int32",
                    "default":"null"
                }
            }
        }
    }
}